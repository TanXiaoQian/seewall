<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Style_Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Style_Wrap.Text">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="Style_Menu_RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_category_high</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">@drawable/selector_menu</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Style_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:height">1px</item>
        <item name="android:background">#a0FFFFFF</item>
    </style>

</resources>
